{
  "expo": {
    "name": "Hotel Booking App",
    "slug": "hote-booking-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/register-hotel.png",
    "scheme": "hotelbooking",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/register-hotel.png",
        "backgroundColor": "white"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.arkar08.hotelbooking"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/register-hotel.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 300,
          "resizeMode": "contain",
          "backgroundColor": "white"
        }
      ],
      "expo-asset"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
